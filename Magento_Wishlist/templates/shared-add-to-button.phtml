/** @var Item $item */
/** @var Wishlist $parentBlock */

$parentBlock = $block->getParentBlock();

if (! ($item = $block->getData('item'))) {
    return;
}

?>
<a href="#"
   @click.prevent='hyva.postForm(<?= /* @noEscape */ $parentBlock->getAddToWishlistParams($item) ?>)'
   id="wishlist-shared-item-<?= /* @noEscape */ $item->getId() ?>"
   class="action towishlist underline"
   data-addto="wishlist"
>
    <span><?= $escaper->escapeHtml(__('Add to Wish List')) ?></span>
</a>
